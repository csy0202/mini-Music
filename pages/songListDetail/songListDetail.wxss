page {
  /* background-color: gray; */
  margin: 0;
  padding: 0;
}

.container {
  width: 100vw;
  display: flex;
  flex-direction: column;
  padding: 0;
}

.top_view {
  width: 100%;
  height: 720rpx;
  position: relative;
}
.naviBar{
  position: fixed;
  z-index: 999;
}
.top_bgc {
  width: 100%;
  height: 100%;
  /* overflow: hidden; */
}

.top_t {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.top_text {
  padding: 0 40rpx;
  color: white;
  width: 100%;
  border-radius: 4rpx; 
}

.top_title {
  margin-top: 10rpx;
  font-size: 36rpx;
}

.top_update {
  padding: 5rpx 0;
  background-color: rgba(88, 88, 88, 0.4);
  font-size: 20rpx;
  width: 100rpx;
  text-align: center;
  margin-top: 20rpx;
}

.top_src {
  margin-top: 25rpx;
  font-size: 25rpx;
  line-height: 40rpx;
  display: block;
}

.top_func {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 170rpx;
  margin-bottom: 30rpx;
  margin-top: 0;
  /* background-color: gray; */
}

.top_item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.top_img {
  width: 56rpx;
  height: 56rpx;
}

.top_btn_title {
  color: white;
  font-size: 18rpx;
}

.topview {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  background-color: white;
  margin: -30px 0 0 0;
  border-radius: 30rpx 30rpx 0 0;
  overflow: hidden;
  z-index: 99;
}

.topL {
  display: flex;
  align-items: center;
  height: 100%;
  margin-left: 20rpx;
}

.topL .icon {
  width: 40rpx;
  height: 40rpx;
}

.topL .title {
  color: black;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.topR {
  display: flex;
  align-items: center;
  height: 100%;
  margin-right: 30rpx;
}

.topR .icon {
  width: 40rpx;
  height: 40rpx;
}

.topR .title {
  color: #4b4b4b;
  font-size: 30rpx;
  margin-left: 10rpx;
}

.listView {
  width: 100%;
}

.item {
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.itemL {
  display: flex;
  margin-left: 30rpx;
  align-items: center;
}

/* .cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
} */

.index {
  width: 50rpx;
  font-size: 28rpx;
  color: #808080;
}

.item_center {
  display: flex;
  flex-direction: column;
  margin-left: 0rpx;
}

.title_top {
  display: flex;
  justify-content: flex-start;
  max-width: 360rpx;
}

.title_top .title {
  color: black;
  font-size: 30rpx;
  white-space: nowrap;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 0;
}

.title_top .title_ext {
  white-space: nowrap;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
  color: #8f8f8f;
  font-size: 30rpx;
}

.title_bottom {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  max-width: 360rpx;
}

.sq {
  padding: 2rpx 5rpx;
  border: #f84242 solid 1rpx;
  border-radius: 6rpx;
  font-size: 12rpx;
  color: #f84242;
  box-sizing: border-box;
}

.subTitle {
  color: #888;
  font-size: 23rpx;
  white-space: nowrap;
  word-wrap: break-word;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 5rpx;
}

.itemR {
  display: flex;
  align-items: center;
  height: 100%;
  margin-right: 30rpx;
}

.video {
  width: 50rpx;
  height: 50rpx;
}

.more {
  width: 50rpx;
  height: 50rpx;
  margin-left: 20rpx;
}
