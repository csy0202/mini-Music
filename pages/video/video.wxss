.user_card{
  height: 475rpx;
  width: 380rpx;
  background-color: #fafafa;
  border-radius: 10rpx;
  display: inline-block;
  flex-direction: column;
  align-items: center;
  margin-right: 10rpx;
}
.cardContent{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.user_card:first-child{
  margin-left: 30rpx;
}
.user_card:last-child{
  margin-right: 30rpx;
}
.cardContent .headerView{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: relative;
}
.headerView .flag{
  position: absolute;
  top: 140rpx;
  left: 140rpx;
   width: 40rpx;
   height: 40rpx;
   border-radius: 20rpx;
}
.cardContent .name{
  margin-top: 20rpx;
  font-size: 25rpx;
}
.cardContent .fans{
  margin-top: 18rpx;
  font-size: 20rpx;
  color: #3c3c3c;
}
.cardContent .desc{
  margin-top: 25rpx;
  font-size: 21rpx;
  color: #3c3c3c;
}
.contant{
  margin-top: 18rpx;
  padding-left: 70rpx;
  line-height: 52rpx;
  color: red;
  /* background-color: red; */
  width: 160rpx;
  height: 56rpx;
  border-radius: 28rpx;
  border: #ff3238 solid 2rpx;
  box-sizing: border-box;
  background-size:20px 20px;
  background-repeat: no-repeat;
  background-position: 20rpx center;
}