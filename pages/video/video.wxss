  width: 100%;
  background-color: #fff;
  height: 77rpx;
  position: fixed;
  z-index: 999;
}

.search_left {
  position: absolute;
  left: 30rpx;
  top: 19rpx;
  width: 29rpx;
  height: 40rpx;
}

.search_center {
  position: absolute;
  left: 115rpx;
  top: 7rpx;
  width: 520rpx;
  height: 60rpx;
  border-radius: 35rpx;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search_icon {
  width: 30rpx;
  height: 30rpx;
}

.search_placehoder {
  margin-left: 10rpx;
