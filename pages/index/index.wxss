/**index.wxss**/

page {
  padding: 0;
  margin: 0;
}
.container {
  width: 100vw;
  /* height: 100vh; */
  padding: 0;
  /* position: relative; */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  top: 75rpx;
  /* position: absolute; */
}
.searchView {
  /* position: absolute; */
  /* top: 0; */
  width: 100%;
  background-color: #fff;
  height: 75rpx;
  position: fixed;
  z-index: 99;
}
.search_left{
  position: absolute;
  left: 30rpx;
  top: 19rpx;
  width: 29rpx;
  height: 40rpx;
}
.search_center{
  position: absolute;
  left: 115rpx;
  top: 7rpx;
  width: 520rpx;
  height: 60rpx;
  border-radius: 35rpx;
  background-color:#f7f7f7;
   display: flex;
  justify-content: center;
  align-items: center;
}
.search_icon{
  width: 30rpx;
  height: 30rpx;
}
.search_placehoder{
  margin-left: 10rpx;
  font-size: 30rpx;
  color: #ccc;
}

.banner{
  /* position: absolute; */
  /* top: 75rpx; */
  /* margin: 0; */
  margin-top: 75rpx;
  width: 100%;
  height: 300rpx;
  position: relative;
}
.slide-image {
  position:absolute;
  top:5%; left:0; right:0;
  margin:auto;
  width: 94%;
  height: 90%;
  border-radius: 15rpx;
}
.bannerText{
  /* height: 40rpx; */
  /* display: flex; */
  position:absolute;
  right: 3%;
  bottom: 5%;
  font-size: 20rpx;
  color: white;
  padding: 3rpx 8rpx;
  border-bottom-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
}
.red{
  background-color:#d53b32;
}
.blue{
  background-color: skyblue;
}
.subIconView{
  margin: auto; 
  width: 94%;
  height: 220rpx;
  /* padding: 0 30rpx; */
  /* background-color: red; */
  display: flex;
  justify-content: space-between;
  
}
.subItem{
  width: 100rpx;
  height: 100%;
  /* background-color: blue; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.item_icon{
  width:92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}
.item_title{
  font-size: 22rpx;
  color: rgb(97, 97, 97);
}
.new_recommend{
  padding-top: 38rpx;
  border-top: #f0f0f0 solid 1rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  /* flex-wrap: wrap; */
}
.recommend_header{
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
}
.songList_title{
  font-size: 35rpx;
  font-weight: bold;
}
.songList_squ{
  height: 50rpx;
  width: 140rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  text-align: center;
  font-weight: 20;
  border-radius: 25rpx;
  border: #d7d7d7 solid 1rpx;
  box-sizing: border-box;
}
.titleView{
  display: flex;
  align-items: center;
}
.space{
  width: 2rpx;
  height: 80%;
  background-color: #d7d7d7 ;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.defaultTitle{
  font-size: 30rpx;
  font-weight: 17;
  color: #888;
  transition: all 0.2s ease;
}
.boldTitle{
  font-size: 35rpx;
  font-weight: bold;
  color: black;
  transition: all 0.2s ease;
}
